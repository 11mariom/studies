class A {
  class B {
    int i;
  };
  B **b;
public:
  //konstruktor domyślny
  //destruktor
  //konstruktor kopiujący
};

int main()
{
  A **a;
  int size = 10;
  create(a, size);
  // w każdym a ma być size elementów b, wartość b ma być index

  // A::sum() - suma wartości elementów b
  for(int i = 0; i < size; ++i)
    a->sum();

  A **a1 = a;

  for(int i = 0; i < size; ++i)
    a1->sum();

  // skasować pamięć

  return 0;
}
